@model Workshop.Models.GuestBook

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm((!string.IsNullOrEmpty(ViewBag.PostId)) ? new { id = ViewBag.PostId } : null))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="input-group col-lg-offset-2 col-lg-7">
                @Html.LabelFor(model => model.Subject)
            </div>
            <div class="input-group col-lg-offset-2 col-lg-7">
                <span class="input-group-addon" id="sizing-addon2"><i class="fa fa-comment-o"></i></span>
                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="input-group col-lg-offset-2 col-lg-7">
                @Html.LabelFor(model => model.Body)
            </div>
            <div class="input-group col-lg-offset-2 col-lg-7">
                @Html.TextAreaFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-5 col-md-5">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section PageScripts
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.bootstrap.js"></script>
    <script src="http://cdn.ckeditor.com/4.4.7/basic/ckeditor.js"></script>

    <script type="text/javascript">

        $(function () {
            CKEDITOR.replace('Body');
        });

    </script>
}